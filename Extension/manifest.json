{
    "manifest_version": 3,
    "name": "GitChat",
    "description": "LLM based understanding for large Git codebases",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": "logo2.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "tabs"
      ]
  }